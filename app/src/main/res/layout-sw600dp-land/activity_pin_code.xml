<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light_green"
    android:padding="16dp"
    tools:context=".PinCodeActivity">

    <!-- Container for the PIN boxes -->
    <TextView
        android:id="@+id/PinCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="488dp"
        android:layout_marginTop="132dp"
        android:text="Enter 4-PIN Code"
        android:textAlignment="center"
        android:textColor="@color/text_color_primary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pinCodeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        android:text="We've sent a 4-digit code to your phone. Please enter it below to continue."
        android:textColor="@color/text_color_primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PinCodeTitle" />

    <LinearLayout
        android:id="@+id/pinBoxesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pinCodeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/pin1"
            style="@style/PinEditText"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/pin2"
            style="@style/PinEditText"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/pin3"
            style="@style/PinEditText"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/pin4"
            style="@style/PinEditText" />
    </LinearLayout>

    <!-- Resend Code Section -->
    <LinearLayout
        android:id="@+id/resendCodeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pinBoxesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code? "
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/resendCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textColor="@color/text_color_secondary"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/proceed_button_rounded"
        android:text="Verify Code"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/button_dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
