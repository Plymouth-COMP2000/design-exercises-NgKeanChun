<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light_green"
    tools:context=".ui.main.fragments.StaffMenuEditFragment">

    <!-- Header -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="25dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/editMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Menu Item"
        android:textColor="@color/text_color_primary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Form Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal"
            app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/foodImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:tint="@color/text_color_secondary"
                    tools:src="@drawable/ic_launcher_foreground" />


            </com.google.android.material.card.MaterialCardView>

            <TextView android:text="Food Name:" style="@style/FormLabel" android:layout_marginTop="24dp" android:textSize="25dp"/>
            <EditText android:id="@+id/foodNameEditText" style="@style/FormEditText" android:hint="Enter food name" android:textSize="20dp"/>

            <TextView android:text="Pricing:" style="@style/FormLabel" android:layout_marginTop="16dp" android:textSize="25dp"/>
            <EditText android:id="@+id/pricingEditText" style="@style/FormEditText" android:hint="e.g., 12.99" android:inputType="numberDecimal" android:textSize="20dp"/>

            <TextView android:text="Description:" style="@style/FormLabel" android:layout_marginTop="16dp" android:textSize="25dp"/>
            <EditText android:id="@+id/descriptionEditText" style="@style/FormEditText" android:hint="Enter a description" android:minLines="3" android:gravity="top" android:textSize="20dp"/>

            <TextView android:text="Category:" style="@style/FormLabel" android:layout_marginTop="16dp" android:textSize="25dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:textSize="20dp">
                <!-- Chips will be added in assessment 2 -->
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/deleteButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="@color/status_cancelled_bg"
            app:iconTint="@color/status_cancelled_bg"
            app:strokeColor="@color/status_cancelled_bg"
            android:textSize="20dp"/>

        <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/saveButton"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/button_light_green"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@color/white"
            app:strokeColor="@color/button_dark_green"
            android:textSize="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>