<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light_green"
    android:padding="24dp"
    tools:context=".ui.main.fragments.StaffReservationStatusFragment"> <!-- CONTEXT IS NOW CORRECT -->

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="return"
        android:padding="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation"
        android:textColor="@color/text_color_primary"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusPageTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Guest Info -->
            <TextView
                android:id="@+id/guestNameTextView"
                style="@style/StatusDetailText"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Sarah Jones" />

            <TextView
                android:id="@+id/guestPhoneTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color_secondary"
                tools:text="012-577-4444" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#E0E0E0" />

            <!-- Detail Rows -->
            <TextView
                android:id="@+id/dateTextView"
                style="@style/StatusDetailText"
                tools:text="Date: Aug 9th" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Time: 11:45 A.M." />

            <TextView
                android:id="@+id/paxTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Pax: 1" />

            <TextView
                android:id="@+id/tableTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Table: 5" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#E0E0E0" />

            <!-- Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="@color/text_color_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/status_pending_bg"
                    tools:src="@drawable/ic_pending" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/status_pending_bg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Pending" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Buttons for Staff Actions -->
    <LinearLayout
        android:id="@+id/statusButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/denyButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Deny"
            android:textColor="@color/status_cancelled_bg"
            app:strokeColor="@color/status_cancelled_bg" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/confirmButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:textColor="@color/white"
            app:backgroundTint="@color/button_dark_green" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
