<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_background_light_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".ui.guest.menu.MenuDetailFragment">

        <!-- Guideline for vertical split -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
            app:layout_constraintBottom_toTopOf="@id/BackButton"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintDimensionRatio="1:1">

            <ImageView
                android:id="@+id/detailFoodImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="food_image_description"
                app:layout_constraintDimensionRatio="1:1"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Food Name TextView -->
        <TextView
            android:id="@+id/detailFoodNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            tools:text="Delicious Food Name" />

        <!-- Price TextView -->
        <TextView
            android:id="@+id/detailFoodPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/notification_desc_text"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/detailFoodNameTextView"
            app:layout_constraintStart_toStartOf="@id/detailFoodNameTextView"
            tools:text="$12.99" />

        <!-- Description Title -->
        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/detailFoodPriceTextView"
            app:layout_constraintStart_toStartOf="@id/detailFoodNameTextView"/>

        <!-- Description TextView -->
        <TextView
            android:id="@+id/detailDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pin_box_background"
            android:padding="16dp"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
            app:layout_constraintStart_toStartOf="@id/detailFoodNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/categoryTitle"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0"
            tools:text="This is a long description of the food item, detailing all of its ingredients and how it is prepared." />

        <!-- Category Title -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/categoryChip"
            app:layout_constraintStart_toStartOf="@id/detailFoodNameTextView"
            android:layout_marginBottom="8dp"/>

        <!-- Category Chip -->
        <TextView
            android:id="@+id/categoryChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Appetizers"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageCard"
            app:layout_constraintStart_toStartOf="@id/detailFoodNameTextView"/>

        <Button
            android:id="@+id/BackButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/proceed_button_rounded"
            android:text="Back To Menu"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="@color/button_dark_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
