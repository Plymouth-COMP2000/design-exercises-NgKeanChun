<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_light_green"
    tools:context=".ui.main.fragments.GuestReservationStatusFragment">

    <!-- Header -->
    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="return"
        android:padding="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation"
        android:textColor="@color/text_color_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/BackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/BackButton" />

    <!-- Guideline to create the two-column layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <!-- Left Card: Reservation Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/BackButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Guest Info -->
            <TextView
                android:id="@+id/guestNameTextView"
                style="@style/StatusDetailText"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Sarah Jones" />

            <TextView
                android:id="@+id/guestPhoneTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_color_secondary"
                tools:text="012-577-4444" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#E0E0E0" />

            <!-- Detail Rows -->
            <TextView
                android:id="@+id/dateTextView"
                style="@style/StatusDetailText"
                tools:text="Date: Aug 9th" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Time: 11:45 A.M." />

            <TextView
                android:id="@+id/paxTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Pax: 1" />

            <TextView
                android:id="@+id/tableTextView"
                style="@style/StatusDetailText"
                android:layout_marginTop="16dp"
                tools:text="Table: 5" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Right Card: Status and Actions -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusActionCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/detailsCard"
        app:layout_constraintBottom_toBottomOf="@id/detailsCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            >

            <!-- Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="@color/text_color_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/status_pending_bg"
                    tools:src="@drawable/ic_pending" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/status_pending_bg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Pending" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="#E0E0E0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Guest Action Buttons -->
            <LinearLayout
                android:id="@+id/statusButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/editButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:text="Edit"
                    android:textColor="@color/button_dark_green"
                    app:strokeColor="@color/button_dark_green" />

                <Button
                    android:id="@+id/cancelReservationButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Cancel"
                    android:textColor="@color/status_cancelled_bg"
                    app:strokeColor="@color/status_cancelled_bg" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
